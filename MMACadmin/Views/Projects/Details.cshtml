@model MMACadmin.Models.Project

@{
    ViewBag.Title = "Details";
}

<h3>@Html.DisplayFor(model => model.ProjectName) Details</h3>

<div>
    
    <dl class="dl-horizontal">

        <dt> Date Created:   </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt> Owner:   </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner)
        </dd>

        <dt> Backup Owner:  </dt>

        <dd>
            @Html.DisplayFor(model => model.BackUpOwner)
        </dd>

    </dl>
</div>
<hr />
@Html.ActionLink("Create A New Project Release", "Create", "ProjectReleases")
<table class="table">
    <tr>
        <th>Release Name</th>
        <th>Date Created</th>
        <th>Owner</th>
        <th>Backup Owner</th>
    </tr>
    @foreach (var item in Model.ProjectReleases)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ReleaseName, "Details", "ProjectReleases", new { id = item.ReleaseID }, null)
            </td>
            <td>
                @Html.DisplayFor(model => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(model => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(model => item.BackUpOwner)
            </td>
        </tr>
    }
    
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProjectID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
